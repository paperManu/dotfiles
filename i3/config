set $wallpaper ~/.config/i3/wallpaper.jpg

new_window normal 1
new_float normal
hide_edge_borders both
focus_follows_mouse no
mouse_warping none
workspace_auto_back_and_forth yes

# Lock, Logout, Suspend, HIbernate, Reboot and Shutdown
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock -c 282c34 -i $wallpaper && sleep 1, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

# Volume & Media Keys
set $pulse_audio_sink 1
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $pulse_audio_sink +5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $pulse_audio_sink -5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $pulse_audio_sink toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next && pkill -RTMIN+10 i3blocks
bindsym XF86AudioPrev exec playerctl previous && pkill -RTMIN+10 i3blocks

# For keyboard without media keys
bindsym $mod+F12 exec --no-startup-id pactl set-sink-volume $pulse_audio_sink +5% && pkill -RTMIN+10 i3blocks
bindsym $mod+F11 exec --no-startup-id pactl set-sink-volume $pulse_audio_sink -5% && pkill -RTMIN+10 i3blocks
bindsym $mod+F9 exec playerctl play-pause
bindsym $mod+F10 exec playerctl next && pkill -RTMIN+10 i3blocks
bindsym $mod+F8 exec playerctl previous && pkill -RTMIN+10 i3blocks

# Screen brighness
bindsym $mod+F6 exec --no-startup-id xbacklight -inc 10 && pkill -RTMIN+5 i3blocks
bindsym $mod+F5 exec --no-startup-id xbacklight -dec 10 && pkill -RTMIN+5 i3blocks

# Keyboard layout change
# bindsym $mod+Tab exec --no-startup-id ${HOME}/.config/i3/xkblayout-state set +1 && pkill -RTMIN+11 i3blocks
bindsym $mod+Tab exec --no-startup-id dbus-send --dest=ru.gentoo.KbddService /ru/gentoo/KbddService ru.gentoo.kbdd.next_layout && sleep 0.1 && pkill -RTMIN+1 i3blocks

#
# Startup applications
#
# Keyboard layout and behavior
exec --no-startup-id "setxkbmap -layout us,fr -option ctrl:nocaps"
exec --no-startup-id "xset r rate 250 30"
# Change resolution
exec "xrandr --output eDP1 --mode 2048x1152"
# For keyboard layout handling
exec --no-startup-id "kbdd"
# Wallpaper
exec_always "feh --bg-scale $wallpaper"
# Pulse Audio
exec --no-startup-id "pulseaudio --start"
# Auto mount USB
exec --no-startup-id "devmon --no-gui"
# Network manager
exec --no-startup-id "nm-applet"
# Dropbox
exec --no-startup-id "dropbox start"
# Compton
exec --no-startup-id "compton --config ~/.config/compton.conf -b"
# Disable Nautilus and Nemo desktop
exec "gsettings set org.gnome.desktop.background show-desktop-icons false"
exec "gsettings set org.nemo.desktop show-desktop-icons false"
# Disable touch screen
exec_always xinput disable `xinput list | egrep "Atmel.*id=[0-9]*" | egrep -o "=[0-9]*" | egrep -o "[0-9]*"`
# Autolock
exec xautolock -time 5 -locker 'i3lock -c 000000' &
