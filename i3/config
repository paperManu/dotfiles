# Disable touch screen
exec_always --no-startup-id "xinput disable `xinput list | egrep \"Atmel.*id=[0-9]*\" | egrep -o \"=[0-9]*\" | egrep -o \"[0-9]*\"`"
# Touchpad
exec_always --no-startup-id "xinput set-prop 'FocalTechPS/2 FocalTech Touchpad' 'libinput Tapping Enabled' 1"
exec_always --no-startup-id "xinput set-prop 'FocalTechPS/2 FocalTech Touchpad' 'libinput Tapping Drag Enabled' 1"
exec_always --no-startup-id "xinput set-prop 'FocalTechPS/2 FocalTech Touchpad' 'libinput Accel Speed' 0.7"
# Change resolution
exec_always --no-startup-id "xrandr --output eDP1 --mode 2048x1152"
