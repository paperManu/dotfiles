client.focused          #0083A4 #0083A4 #fdf6e3 #0083A4
client.focused_inactive #073642 #073642 #93a1a1 #002b36
client.unfocused        #002b36 #002b36 #586e75 #002b36
client.urgent           #FF5E00 #FF5E00 #fdf6e3 #FF5E00

set $wallpaper ~/.config/sway/wallpaper.jpg

default_border pixel 3
default_floating_border pixel 3
focus_follows_mouse no
mouse_warping none
workspace_auto_back_and_forth yes
xwayland enable

# gaps outer 2
gaps inner 8

# Screen locking and lock before sleep
exec swayidle -w timeout 900 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"'
bindsym $mod+Ctrl+l 'swaylock -f -c 000000'
bindsym $mod+Ctrl+s 'systemctl suspend'

input "type:keyboard" {
    repeat_delay 250
    repeat_rate 40
    xkb_options compose:ralt,ctrl:nocaps
}

input "type:touch" {
    events disabled
}

input "type:touchpad" {
    natural_scroll disabled
    dwt enabled
    tap enabled
    pointer_accel 0.5
}

output eDP-1 {
    mode --custom 2048x1152
    bg $wallpaper stretch
}

output DP-3 {
    bg $wallpaper stretch
}

# For keyboard without media keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && pkill -RTMIN+10 i3blocks

# Screen brighness
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10 && pkill -RTMIN+5 i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10 && pkill -RTMIN+5 i3blocks

# Screenshot
bindsym $mod+Shift+p exec grimshot save active
bindsym $mod+Alt+p exec grimshot save area

exec_always {
    gsettings set $gnome-schema gtk-theme "Arc-Dark"
    gsettings set $gnome-schema icon-theme "Adwaita"
    gsettings set $gnome-schema cursor-theme "Adwaita"
    gsettings set $gnome-schema color-scheme prefer-dark
    gsettings set $gnome-schema font-name "Sans 10"
}

